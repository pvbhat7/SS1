                <androidx.cardview.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="130dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp">


                    <LinearLayout
                        android:background="@drawable/profile_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/sprofilephoto"
                            android:layout_marginLeft="15dp"
                            android:layout_gravity="center"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:clickable="false"
                            app:civ_border_width="3dp"
                            app:civ_border_color="#FFFFFFFF"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_below="@+id/header_cover_image"
                            android:layout_centerHorizontal="true"
                            android:elevation="5dp"
                            android:padding="10dp"
                            android:scaleType="centerCrop" />

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/profileHeadingName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/comic_bold"
                                android:gravity="top"
                                android:text=""
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="25dp" />

                            <TextView
                                android:id="@+id/profileHeadingmobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/comic_bold"
                                android:textColor="@color/black"
                                android:text="+91 8796238220"
                                android:textAlignment="center"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/profileHeadingEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/comic_bold"
                                android:textColor="@color/black"
                                android:text=""
                                android:textAlignment="center"
                                android:textSize="12dp" />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:id="@+id/adminZoneCardView"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"
                    android:layout_width="fill_parent"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="false"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/adminZone"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/oops"
                                android:layout_width="25dp"
                                android:layout_height="25dp"/>
                            <TextView
                                android:textColor="@color/black"
                                android:layout_marginLeft="25dp"
                                android:textSize="16dp"
                                android:fontFamily="@font/comic_bold"
                                android:layout_gravity="center_vertical"
                                android:text="Admin Zone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"
                    android:layout_width="fill_parent"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="false"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/editProfileId"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/editprofile_icon"
                                android:layout_width="25dp"
                                android:layout_height="25dp"/>
                            <TextView
                                android:textColor="@color/black"
                                android:layout_marginLeft="25dp"
                                android:textSize="16dp"
                                android:fontFamily="@font/comic_bold"
                                android:layout_gravity="center_vertical"
                                android:text="Edit Profile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <View
                            android:id="@+id/packageView"
                            android:layout_marginLeft="55dp"
                            android:layout_marginTop="3dp"
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorDivider"/>

                        <LinearLayout
                            android:id="@+id/myGymPackagesId"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/orders_icon"
                                android:layout_width="25dp"
                                android:layout_height="25dp"/>
                            <TextView
                                android:textColor="@color/black"
                                android:layout_marginLeft="25dp"
                                android:textSize="16dp"
                                android:fontFamily="@font/comic_bold"
                                android:layout_gravity="center_vertical"
                                android:text="My Gym Packages"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"
                    android:layout_width="fill_parent"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="false"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/myOrdersId"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/orders_icon"
                                android:layout_width="25dp"
                                android:layout_height="25dp"/>
                            <TextView
                                android:textColor="@color/black"
                                android:layout_marginLeft="25dp"
                                android:textSize="16dp"
                                android:fontFamily="@font/comic_bold"
                                android:layout_gravity="center_vertical"
                                android:text="My Orders"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <View
                            android:layout_marginLeft="55dp"
                            android:layout_marginTop="3dp"
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorDivider"/>

                        <LinearLayout
                            android:id="@+id/myRewardsId"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/rewards_icon"
                                android:layout_width="25dp"
                                android:layout_height="25dp"/>
                            <TextView
                                android:textColor="@color/black"
                                android:layout_marginLeft="25dp"
                                android:textSize="16dp"
                                android:fontFamily="@font/comic_bold"
                                android:layout_gravity="center_vertical"
                                android:text="My Rewards"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"
                    android:layout_width="fill_parent"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="false"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/logoutId"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/logout_icon"
                                android:layout_width="25dp"
                                android:layout_height="25dp"/>
                            <TextView
                                android:textColor="@color/black"
                                android:layout_marginLeft="25dp"
                                android:textSize="16dp"
                                android:fontFamily="@font/comic_bold"
                                android:layout_gravity="center_vertical"
                                android:text="Log out"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <View
                            android:layout_marginTop="3dp"
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorDivider"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/tavrosLinkNew"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"
                    android:layout_width="fill_parent"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/currentAppVersion"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:text="v 1.554.8989"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <View
                            android:layout_marginTop="2dp"
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorDivider"/>
                        <ImageView
                            android:src="@drawable/credits"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <View
                    android:layout_marginTop="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorDivider"/>

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:visibility="gone"/>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
