<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    card_view:cardElevation="0dp"
    app:cardCornerRadius="40dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp">


        <LinearLayout
            android:id="@+id/layout_1"
            android:visibility="gone"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Mobile 1"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/mobile1"
                android:layout_weight="1"
                android:text="8796238220"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/whatsapp1"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:src="@drawable/whatsapp_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"/>
            <ImageView
                android:id="@+id/call1"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:src="@drawable/call_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_2"
            android:visibility="gone"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Mobile 2"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/mobile2"
                android:layout_weight="1"
                android:text="8796238220"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/whatsapp2"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:src="@drawable/whatsapp_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"/>
            <ImageView
                android:id="@+id/call2"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:src="@drawable/call_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_3"
            android:visibility="gone"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Mobile 3"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/mobile3"
                android:layout_weight="1"
                android:text="8796238220"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/whatsapp3"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@drawable/whatsapp_icon" />
            <ImageView
                android:id="@+id/call3"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:src="@drawable/call_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_4"
            android:visibility="gone"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Mobile 4"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/mobile4"
                android:layout_weight="1"
                android:text="8796238220"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/whatsapp4"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:src="@drawable/whatsapp_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"/>
            <ImageView
                android:id="@+id/call4"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:src="@drawable/call_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"/>

        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorDivider" />

        <TextView
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:text="Add new followup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:hint="follow up date">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/contactdate"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusableInTouchMode="false"
                android:singleLine="true"
                android:text=""
                android:textSize="15dp" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:hint="comments"
            android:textAlignment="center">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/comments"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:singleLine="true"
                android:text=""
                android:textSize="15dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/savebtn"
            android:text="save"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@color/colorDivider" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:scrollbars="vertical" />


    </LinearLayout>
</androidx.cardview.widget.CardView>


