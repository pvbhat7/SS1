<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView

        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:elevation="4dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/membership_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="20dp">
                    <ImageView
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/redheart"
                        android:layout_width="15dp"
                        android:layout_height="15dp"/>
                    <TextView
                        android:textSize="12dp"
                        android:text="plan name : "
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/comic_simple"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/m_name"
                        android:textSize="15dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/comic_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="4dp"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="20dp">
                    <ImageView
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/calendar_icon"
                        android:layout_width="15dp"
                        android:layout_height="15dp"/>
                    <TextView
                        android:textSize="12dp"
                        android:text="Duration : "
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/comic_simple"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/m_duration"
                        android:textSize="12dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/comic_simple"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="4dp"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="20dp">
                    <ImageView
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/balanceleft_icon"
                        android:layout_width="15dp"
                        android:layout_height="15dp"/>
                    <TextView
                        android:textSize="12dp"
                        android:text="Total Balance : "
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/comic_simple"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/m_totalbalance"
                        android:textSize="12dp"
                        android:text=""
                        android:textColor="@color/green"
                        android:fontFamily="@font/comic_simple"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="12dp"
                        android:layout_marginLeft="10dp"
                        android:text=" | "
                        android:textColor="@color/black"
                        android:fontFamily="@font/comic_simple"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="12dp"
                        android:text="Balance left : "
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/comic_simple"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/m_balanceleft"
                        android:textSize="12dp"
                        android:text=""
                        android:textColor="@color/red"
                        android:fontFamily="@font/comic_simple"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="4dp"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="20dp">
                    <ImageView
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/money_icon"
                        android:layout_width="15dp"
                        android:layout_height="15dp"/>
                    <TextView
                        android:textSize="12dp"
                        android:text="Paid: "
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/comic_simple"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/m_fees"
                        android:textSize="12dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:fontFamily="@font/comic_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/m_mode"
                            android:textSize="7dp"
                            android:text=""
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/m_txn"
                            android:textSize="7dp"
                            android:text=""
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



    </androidx.cardview.widget.CardView>

</RelativeLayout>
