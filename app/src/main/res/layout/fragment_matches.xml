<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.dashboard.MatchesFragment">

  

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/menu_contactsViewed"
            android:layout_marginRight="4dp"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:outlineAmbientShadowColor="#CCCDD1"
            android:outlineSpotShadowColor="@color/black"
            app:cardBackgroundColor="@color/yellow"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            app:strokeColor="#0021FF"
            app:strokeWidth="1dp">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">
                <ImageView
                    android:src="@drawable/eye"
                    android:layout_marginRight="5dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Contacts viewed"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/txt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="0 Profiles"
                        android:textColor="#0E9A40"
                        android:textSize="10dp" />

                </LinearLayout>
            </LinearLayout>



        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/menu_likedByYou"
            android:layout_marginLeft="4dp"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:outlineAmbientShadowColor="#CCCDD1"
            android:outlineSpotShadowColor="@color/black"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            app:strokeColor="#0021FF"
            app:strokeWidth="1dp">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">
                <ImageView
                    android:src="@drawable/redheart"
                    android:layout_marginRight="5dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Liked profiles"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/txt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="0 Profiles"
                        android:textColor="#0E9A40"
                        android:textSize="10dp" />

                </LinearLayout>
            </LinearLayout>



        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:id="@+id/menu_shortlistedByYou"
            android:layout_marginRight="4dp"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:outlineAmbientShadowColor="#CCCDD1"
            android:outlineSpotShadowColor="@color/black"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            app:strokeColor="#0021FF"
            app:strokeWidth="1dp">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">
                <ImageView
                    android:src="@drawable/star_golden"
                    android:layout_marginRight="5dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Shortlisted"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/txt3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="0 Profiles"
                        android:textColor="#0E9A40"
                        android:textSize="10dp" />

                </LinearLayout>
            </LinearLayout>



        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/menu_interestSentByYou"
            android:layout_marginLeft="4dp"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:outlineAmbientShadowColor="#CCCDD1"
            android:outlineSpotShadowColor="@color/black"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            app:strokeColor="#0021FF"
            app:strokeWidth="1dp">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">
                <ImageView
                    android:src="@drawable/interestsent"
                    android:layout_marginRight="5dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Sent Interest"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/txt4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="0 Profiles"
                        android:textColor="#0E9A40"
                        android:textSize="12dp" />

                </LinearLayout>
            </LinearLayout>



        </androidx.cardview.widget.CardView>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/contactViewedRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:scrollbars="vertical"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>