<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/level1_cardview"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="1dp"
        android:background="@color/black"
        android:clickable="true"
        android:focusable="true"
        android:foregroundGravity="center_vertical"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:clickable="false"
                android:focusable="true"
                android:background="@color/cardview_shadow_end_color"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="130dp">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/profilePhoto"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:clickable="false"
                    app:civ_border_width="3dp"
                    app:civ_border_color="#FFFFFFFF"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_below="@+id/header_cover_image"
                    android:layout_centerHorizontal="true"
                    android:elevation="5dp"
                    android:padding="10dp"
                    android:scaleType="centerCrop" />
                <LinearLayout
                    android:id="@+id/attendanceLinearLayout"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">



                    <TextView
                        android:id="@+id/name"
                        android:layout_marginLeft="50dp"
                        android:visibility="visible"
                        android:fontFamily="@font/comic_bold"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:text="Prashant Bhat"
                        android:textSize="15dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/age"
                        android:visibility="visible"
                        android:layout_marginLeft="50dp"
                        android:fontFamily="@font/comic_bold"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:text="26 yrs"
                        android:textSize="10dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <Button
                android:id="@+id/shortlistBtn"
                android:layout_weight="1"
                android:textSize="8dp"
                android:fontFamily="@font/comic_bold"
                android:text="shortlist"
                android:layout_width="20dp"
                android:layout_height="30dp"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/notinterestedBtn"
                android:layout_weight="1"
                android:textSize="8dp"
                android:fontFamily="@font/comic_bold"
                android:text="reject"
                android:layout_width="20dp"
                android:layout_height="30dp"/>

        </LinearLayout>

        </LinearLayout>





    </androidx.cardview.widget.CardView>


</LinearLayout>

